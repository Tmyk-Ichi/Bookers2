<h1>Book detail</h1>
    <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
    <%end%>
    <%= link_to "#{@user.name}", user_path(@user.id) %>
	<p class = "book-title"><%= link_to "#{@book.title}",book_path(@book.id) %></p>
	<p class = "book-body"><%= @book.body %></p>

<% if @book.user_id == current_user.id %>
<%= link_to "Edit", edit_book_path %>
<%= link_to "Destroy", book_path, method: :delete %>
<% end %>

<%= render partial: 'layouts/sidebar', locals:{ user: @user, newbook: @newbook } %>