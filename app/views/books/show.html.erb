<%= render partial: 'layouts/sidebar', locals:{ user: @user, newbook: @newbook } %>

<div class="col-xs-9">
	<h2>Book detail</h2>
	    <table class="table">
	    	<tbody>
	    	  <tr>
	    	  	  <td>
				    <%= link_to user_path(@user.id) do %>
				    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
				    <br><%= "#{@user.name}" %>
				    <%end%>
				  </td>
				  <td>
					<p class = "book-title"><%= link_to "#{@book.title}",book_path(@book.id) %></p>
				  </td>
				  <td>
					<p class = "book-body"><%= @book.body %></p>
                  </td>
				  <% if @book.user_id == current_user.id %>
				  <td>
				  	<%= link_to edit_book_path do %>
				  	<button type="button" class="btn btn-info">Edit</button>
				  	<%end%>
				  </td>
				  <td>
					<%= link_to book_path, method: :delete, data: { confirm: '削除しますか？' } do %>
					<button type="button" class="btn btn-danger">Destroy</button>
				  	<%end%>
				  </td>
					<% end %>
			  </tr>
			</tbody>
       </table>
</div>
