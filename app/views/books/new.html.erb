<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url:"/books/create") do |f| %>
    <% @book.errors.full_messages.each do |message| %>
              <%= message %>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>