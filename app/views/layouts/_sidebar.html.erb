<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'100x100' %>
<p>name</p>
<%= user.name %>
<p>introduction</p>
<%= user.introduction %>

<%= link_to "編集", edit_user_path(current_user.id) %>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for newbook do |f| %>
    <% newbook.errors.full_messages.each do |message| %>
              <%= message %>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>